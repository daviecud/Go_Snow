<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    >
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="220dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dc_snow" />


    <TextView
        android:id="@+id/heading"
        android:layout_width="272dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/bangers"
        android:shadowColor="@color/colorPrimary"
        android:soundEffectsEnabled="false"
        android:text="@string/go_snow"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textColor="#E47D31"
        android:textSize="30sp"
        android:typeface="sans"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:text="date"
        android:textColor="#A72323"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/city" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="City"
        android:textColor="#C8D12A"
        android:textSize="25sp"

        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="143dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:paddingLeft="10dp"
        android:text="30"
        android:textColor="@color/colorAccent"
        android:textSize="50sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/farenheit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:text="o"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/temp"
        app:layout_constraintTop_toTopOf="@+id/temp" />

    <TextView
        android:id="@+id/summary"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/temp" />

    <Button
        android:id="@+id/directions_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="Get Directions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="213dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/summary"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asddfasdaf"
            android:textColor="@color/colorAccent"
            android:textSize="44dp" />


        <TextView
            android:id="@+id/upper_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asddfasdaf"
            android:textColor="@color/colorAccent"
            android:textSize="44dp"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@+id/test_text" />


        <TextView
            android:id="@+id/lower_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asddfasdaf"
            android:textColor="@color/colorAccent"
            android:textSize="44dp"
            app:layout_constraintTop_toBottomOf="@+id/upper_snow" />


        <TextView
            android:id="@+id/new_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:text="asddfasdaf"
            android:textColor="@color/colorAccent"
            android:textSize="44dp"
            app:layout_constraintTop_toBottomOf="@+id/lower_snow" />


        <TextView
            android:id="@+id/last_snow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asddfasdaf"
            android:textColor="@color/colorAccent"
            android:textSize="44dp"
            app:layout_constraintTop_toBottomOf="@+id/new_snow" />


        <TextView
            android:id="@+id/conditions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asddfasdaf"
            android:textColor="@color/colorAccent"
            android:textSize="44dp"
            app:layout_constraintTop_toBottomOf="@+id/last_snow" />

    </android.support.v7.widget.CardView>




</android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>